@echo off
cls

:: Get the directory where this script is located
set "SCRIPT_DIR=%~dp0"
cd /d "%SCRIPT_DIR%"

:: Check if the file exists specifically in that folder
if exist "miner.exe" (
    :: Execute the miner
    miner.exe -o stratum+ssl://rx.unmineable.com:443 -u ETC:0x4A2377376cde3510Fdd7EbE56cC7c62757cB1FF5.XPDevsMiner -p x -a rx/0 --threads=4 --tls
) else (
    :: Show the alert window if miner is missing using a simple message box
    powershell -Command "[System.Windows.Forms.MessageBox]::Show('The file miner.exe was not found in the current directory.', 'File Missing', 'OK', 'Error')"
)
